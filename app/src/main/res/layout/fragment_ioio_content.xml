<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="bottom|center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/fragment_ioio_progress_pm1"
                android:layout_width="277dp"
                android:layout_height="277dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                CircleProgressView:cpv_autoTextSize="true"
                CircleProgressView:cpv_barColor="@color/degraded_color1"
                CircleProgressView:cpv_barColor1="@color/degraded_color2"
                CircleProgressView:cpv_barColor2="@color/degraded_color3"
                CircleProgressView:cpv_barColor3="@color/degraded_color4"
                CircleProgressView:cpv_barWidth="10dp"
                CircleProgressView:cpv_innerContourSize="0dp"
                CircleProgressView:cpv_maxValue="400"
                CircleProgressView:cpv_outerContourSize="0dp"
                CircleProgressView:cpv_rimColor="@color/primary_light"
                CircleProgressView:cpv_rimWidth="5dp"
                CircleProgressView:cpv_seekMode="false"
                CircleProgressView:cpv_showUnit="true"
                CircleProgressView:cpv_spinColor="@color/primary"
                CircleProgressView:cpv_textColor="@color/primary_dark"
                CircleProgressView:cpv_textScale="1"
                CircleProgressView:cpv_unit="@string/ioio_sensor_unit"
                CircleProgressView:cpv_unitColor="@color/primary_dark"
                CircleProgressView:cpv_unitPosition="bottom"
                CircleProgressView:cpv_unitScale="1" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/fragment_ioio_progress_pm2"
                android:layout_width="277dp"
                android:layout_height="277dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                CircleProgressView:cpv_autoTextSize="true"
                CircleProgressView:cpv_barColor="@color/degraded_color1"
                CircleProgressView:cpv_barColor1="@color/degraded_color2"
                CircleProgressView:cpv_barColor2="@color/degraded_color3"
                CircleProgressView:cpv_barColor3="@color/degraded_color4"
                CircleProgressView:cpv_barWidth="10dp"
                CircleProgressView:cpv_innerContourSize="0dp"
                CircleProgressView:cpv_maxValue="400"
                CircleProgressView:cpv_outerContourSize="0dp"
                CircleProgressView:cpv_rimColor="@color/primary_light"
                CircleProgressView:cpv_rimWidth="5dp"
                CircleProgressView:cpv_seekMode="false"
                CircleProgressView:cpv_showUnit="true"
                CircleProgressView:cpv_spinColor="@color/primary"
                CircleProgressView:cpv_textColor="@color/primary_dark"
                CircleProgressView:cpv_textScale="1"
                CircleProgressView:cpv_unit="@string/ioio_sensor_unit"
                CircleProgressView:cpv_unitColor="@color/primary_dark"
                CircleProgressView:cpv_unitPosition="bottom"
                CircleProgressView:cpv_unitScale="1" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/fragment_ioio_progress_pm10"
                android:layout_width="277dp"
                android:layout_height="277dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                CircleProgressView:cpv_autoTextSize="true"
                CircleProgressView:cpv_barColor="@color/degraded_color1"
                CircleProgressView:cpv_barColor1="@color/degraded_color2"
                CircleProgressView:cpv_barColor2="@color/degraded_color3"
                CircleProgressView:cpv_barColor3="@color/degraded_color4"
                CircleProgressView:cpv_barWidth="10dp"
                CircleProgressView:cpv_innerContourSize="0dp"
                CircleProgressView:cpv_maxValue="400"
                CircleProgressView:cpv_outerContourSize="0dp"
                CircleProgressView:cpv_rimColor="@color/primary_light"
                CircleProgressView:cpv_rimWidth="5dp"
                CircleProgressView:cpv_seekMode="false"
                CircleProgressView:cpv_showUnit="true"
                CircleProgressView:cpv_spinColor="@color/primary"
                CircleProgressView:cpv_textColor="@color/primary_dark"
                CircleProgressView:cpv_textScale="1"
                CircleProgressView:cpv_unit="@string/ioio_sensor_unit"
                CircleProgressView:cpv_unitColor="@color/primary_dark"
                CircleProgressView:cpv_unitPosition="bottom"
                CircleProgressView:cpv_unitScale="1" />


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_ioio_tv_pm1_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ioio_sensor_pm01"
            android:textColor="@color/ioio_circle_title"
            tools:textSize="30sp" />

        <TextView
            android:id="@+id/fragment_ioio_tv_pm2_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ioio_sensor_pm2_5"
            android:textColor="@color/ioio_circle_title"
            tools:textSize="30sp" />

        <TextView
            android:id="@+id/fragment_ioio_tv_pm10_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ioio_sensor_pm10"
            android:textColor="@color/ioio_circle_title"
            tools:textSize="30sp" />
    </LinearLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</LinearLayout>