<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">


        <TextView
            android:id="@+id/textView"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:textColor="#0000FF"
            tools:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:layout_weight="0.5"
                android:layout_width="120dp">
                <ProgressBar
                    android:id="@+id/fragment_ioio_progress_pm1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:indeterminate="false"
                    android:max="100"
                    android:progressDrawable="@drawable/bar" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/fragment_ioio_tv_pm1_value"
                    android:textColor="#0000FF"
                    tools:textSize="@android:dimen/app_icon_size"
                    android:layout_weight="0.12"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="@android:dimen/notification_large_icon_width"
                    android:textAllCaps="false"
                    android:text="0" />
           </RelativeLayout>

            <RelativeLayout
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:layout_weight="0.5"
                android:layout_width="120dp">
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/fragment_ioio_progress_pm2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:max="100"
                android:progressDrawable="@drawable/bar"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment_ioio_tv_pm2_value"
                android:textColor="#0000FF"
                tools:textSize="@android:dimen/app_icon_size"
                android:layout_weight="0.12"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="@android:dimen/notification_large_icon_width"
                android:textAllCaps="false"
                android:text="0" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:layout_weight="0.5"
                android:layout_width="120dp">
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/fragment_ioio_progress_pm10"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:max="100"
                android:progressDrawable="@drawable/bar"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment_ioio_tv_pm10_value"
                android:textColor="#0000FF"
                tools:textSize="@android:dimen/app_icon_size"
                android:layout_weight="0.12"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="@android:dimen/notification_large_icon_width"
                android:textAllCaps="false"
                android:text="0" />
            </RelativeLayout>

         </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="58dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_height="120dp"
                android:id="@+id/fragment_ioio_tv_pm1_label"
                tools:textSize="30sp"
                android:textColor="#0000FF"
                android:gravity="center"
                android:text="PM1"
                android:layout_width="120dp"
                android:layout_weight="1" />

            <TextView
                android:layout_height="120dp"
                android:id="@+id/fragment_ioio_tv_pm2_label"
                tools:textSize="30sp"
                android:textColor="#0000FF"
                android:gravity="center"
                android:text="PM2.5"
                android:layout_width="120dp"
                android:layout_weight="1" />

            <TextView
                android:layout_height="120dp"
                android:id="@+id/fragment_ioio_tv_pm10_label"
                tools:textSize="30sp"
                android:textColor="#0000FF"
                android:gravity="center"
                android:text="PM10"
                android:layout_width="120dp"
                android:layout_weight="1" />
        </LinearLayout>

        <com.jjoe64.graphview.GraphView
        android:layout_width="wrap_content"
        android:layout_height="270dip"
        android:id="@+id/fragment_ioio_graph"
        android:layout_marginRight="5dip"
        android:layout_alignParentTop="true"
        android:soundEffectsEnabled="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="265dp"
        android:layout_marginBottom="5dip"
        android:orientation="horizontal">


        <fragment
        android:id="@+id/fragment_ioio_map"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_width="match_parent"
        map:mapType="satellite"
        android:layout_height="265dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="320dp"
        android:gravity="center"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:orientation="horizontal">

    <WebView
        android:layout_width="360dp"
        android:layout_height="320dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/webView" />
    </LinearLayout>


    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    </LinearLayout>



</ScrollView>


